    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
        <!-- Sign Up section -->
        <div id="SignUpSection">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7 col-sm-9 col-sm-offset-1">
                        <div class="page-header">
                            <h1>Sign Up</h1>
                        </div><!-- .page-header -->
                        <form>
                            <div class="row">
                                <div class="col-xs-12">
                                    <!-- Name <input> -->
                                    <div class="form-group">
                                        <label for="name" class="sr-only">Full Name</label>
                                        <div class="input-group">
<!-- Full Name Input -->
                                            
                                            <%= f.text_field :fullname, class: "form-control", placeholder: 'Full Name', required: true %>
                                            
                                            <!-- Question Sign -->
                                            <span class="input-group-addon" data-toggle="tooltip" data-placement="top" title="Enter Your First and Last Name" tabindex="0"><i class="fa fa-question-circle" aria-hidden="true"></i></span>
                                        </div><!-- .input-group -->
                                    </div><!-- .form-group -->                                
                                </div><!-- .col** -->
                                
                                <div class="col-xs-12">
                                    <!-- Email <input> -->
                                    <div class="form-group">
                                        <label for="email" class="sr-only">E-mail</label>
                                        <div class="input-group">
<!-- E-mail Input -->
                                         <%= f.email_field :email, placeholder: 'Email', class: "form-control", required: true%>
                                            <!-- Question Sign -->
                                            <span class="input-group-addon" data-toggle="tooltip" data-placement="top" title="Enter Your Email Address for Verification Code" tabindex="0"><i class="fa fa-question-circle" aria-hidden="true"></i></span>
                                        </div><!-- .input-group -->
                                    </div><!-- .form-group -->                                
                                </div><!-- .col** -->
                                
                                <div class="col-xs-12">
                                    <!-- Password <input> -->
                                    <div class="form-group">
                                        <label for="password" class="sr-only">Password</label>
                                        <div class="input-group">
<!-- Password Input -->
                                        
                                            <% if @minimum_password_length %>
                                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                                            <% end %>
                                            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'write a password', required: true%>

 
                                            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Re-write the password', required: true %>
                                            <!-- Question Sign -->
                                            <!-- Put Your Password Conditions here in title attribute title="Condition here"-->
                                            <span class="input-group-addon" data-toggle="tooltip" data-placement="top" title="...." tabindex="0"><i class="fa fa-question-circle" aria-hidden="true"></i></span>
                                        </div><!-- .input-group -->
                                    </div><!-- .form-group -->                                
                                </div><!-- .col** -->
                                
                                <div class="col-xs-6">
                                    <!-- Country <select> -->
                                    <div class="form-group">
                                        <label for="country" class="sr-only">Country</label>
<!-- Country Select-->                                        
                                        
                                   
                                    <%= f.select(:country, ['Egypt', 'saudi arabia'], {}, { :class => 'form-control'}) %>

                                  
                                    </div><!-- .form-group -->
                                </div><!-- .col** -->
                                
                                <div class="col-xs-6">
                                    <!-- City <select> -->
                                    <div class="form-group">
                                        <label for="city" class="sr-only">City</label>
<!-- City Select -->
                                        
                                         <%= f.select(:city, ['Egypt', 'saudi arabia'], {}, { :class => 'form-control' }) %>
                                   
                                    </div><!-- .form-group -->
                                </div><!-- .col** -->
                                
                                <div class="col-xs-3">
                                    <!-- Mobile Code <input> -->
                                    <div class="form-group">
                                        <label for="mobile-code" class="sr-only">Mobile Code</label>
                                        <div class="input-group">
                                            <span class="input-group-addon">+</span>
<!-- Mobile Code Input -->
                                            <input type="text" class="form-control" id="mobile-code" placeholder="Code">
                                             
                                        </div><!-- .input-group -->
                                    </div><!-- .form-group -->
                                </div><!-- .col** -->
                                
                                <div class="col-xs-9">
                                    <div class="form-group">
                                        <label for="mobile" class="sr-only">Mobile Number</label>
                                        <div class="input-group">
<!-- Mobile Number Input -->
                                            
                                             <%= f.telephone_field :phone_number, class: 'form-control', placeholder: 'type your number', required: true %>

                                            <!-- Question Sign -->
                                            <span class="input-group-addon" data-toggle="tooltip" data-placement="top" title="Enter Your Mobile Number for Communication" tabindex="0"><i class="fa fa-question-circle" aria-hidden="true"></i></span>
                                        </div><!-- .input-group -->
                                    </div><!-- .form-group -->
                                </div><!-- .col** -->
                                
                                <div class="col-sm-6 col-xs-12">
                                    <!-- Job Title <select> -->
                                    <div class="form-group">
                                        <label for="job" class="sr-only">Job Title</label>
<!-- Job Title Select -->
                                        <%= f.select(:jobtitle, ['Egypt', 'saudi arabia'], {}, { :class => 'form-control', required: true }) %>

                      
                                    </div><!-- .form-group -->
                                </div><!-- .col** -->
                                
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label for="role" class="sr-only">Role/Position</label>
<!-- Role/Position Input -->
                                        <%= f.text_field :jobrole, class: "form-control", placeholder: 'Job Role', required: true%>

                                    </div><!-- .form-group -->
                                </div><!-- .col** -->
                                
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label for="ImageInput">Profile Picture</label>
<!-- Profile Picture Input -->
                                        <input type="file" id="ImageInput" class="form-control">
                                        
                                    </div><!-- .form-group -->
                                </div>
                                
                                <div class="col-xs-12">
                                    <div class="thumbnail">
                                        <img src="#" alt="No Image Selected" id="ImagePreview" class="form-control">
                                    </div>
                                </div>
                                
                                <div class="col-xs-12">
<!-- Submit Button -->
                                    <hr>
                                    <%= f.submit "Sign up", class: 'btn btn-primary btn-lg full-width' %>
                                </div>
                                
                            </div><!-- .row -->
                            
                            

                        </form>
                    </div><!-- .col** -->
                </div><!-- .row -->
            </div><!-- .container -->
        </div><!-- .sign-up-section --> 

<% end %>


