<nav class="navbar navbar-default">
            <div class="container-fluid">
                
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <!-- Toggle Button -->
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#loginForm" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button> <!-- .navbar-toggle -->
                    
                    <!-- Logo -->
                    <a href="#" class="navbar-brand">
                        <img src="images/logo_shape_58x52.png" class="logo-shape" alt="">
                        <img src="images/logo_text_141x26.png" class="logo-text" alt="">
                    </a><!-- .navbar-brand -->
                </div><!-- .navbar-header -->
                <%= devise_error_messages! %>
 <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="loginForm">

                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "navbar-form navbar-right"}) do |f| %>
                
            
                        <div class="form-group">
                            <label for="LogInUsername" class="sr-only">User Name</label>
                            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', id: 'LogInUsername', required: true, :html => {name: 'LogInUsername',} %>
                        </div>
                        <div class="form-group">
                            <label for="LogInPassword" class="sr-only">Password</label>
                            <%= f.password_field :password, class: 'form-control', placeholder: 'Password', id: 'LogInPassword', :html => {name: 'LogInPassword'}, required: true %>
                        </div>
                            <%= f.submit "Login", class: 'btn btn-primary' %>
                        <div class="forgot-pass small">
                            Forgot your password?&nbsp;<%= link_to 'Click Here', new_password_path(resource_name) %>
                        </div>
                    
                    <% end %>
                </div><!-- /.navbar-collapse -->
    </div><!-- .container-fluid -->
</nav><!-- .navbar .navbar-default -->