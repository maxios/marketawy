<!-- Load More Button Here-->
                    <!-- Load More Button -->
                    <!-- <button class="btn btn-default btn-lg full-width">Load More...</button> -->

                </div><!-- #jobs -->
                
                <!-- Statues Column -->
                <div class="col-sm-6 col-xs-7 statues-column">

                    <!-- Write Somthing Textarea -->
                    <div class="new-post">
                            <%= form_for @post do |f| %>
<!-- New Post textarea Here -->
                                <%= f.text_area :content, class: 'form-control', id: 'textarea', placeholder: 'Write Something...', rows: '4' %>
                            <div class="pull-left">
                                <div class="form-group">
<!-- At Marketawy Checkbox Here -->
                                     <%= f.check_box :marketawy, id: 'AtMarketawy' %><label for="AtMarketawy" class="unselectable">&nbsp;At marketawy</label>
                                </div><!-- .form-group -->
                            </div><!-- .pull-left -->
                            <div class="pull-right">
<!-- Submit New Post Here -->
                                    <%= f.submit :post, class: "btn btn-primary" %>
                            </div><!-- .pull-right -->
                            <!-- Clear Float side effect-->
                            <div class="clearfix"></div>
                        <% end %>
                    </div><!-- .new-post -->
                    
                    
                    
                    
                    <% Post.all.reverse.each do |post| %>
                    <% if @user == post.user %>
                    <!-- Start Of Statue Block -->
                    <div class="post" tabindex="0">
                            <div class="picture">
<!-- Post Picture Here -->
                                <img src="images/logo_shape.png" alt="">
                            </div>

                        <div class="text">      
<!-- Settings button of the Post -->
                                <a href="#" class="edit-post-button pull-right"><i class="fa fa-pencil"></i></a>
                                <%= link_to "Destroy", post, method: :delete, class: 'delete-post-button pull-right', data: { confirm: 'Are you sure?' } %><i class="fa fa-times"></i>


                              
<!-- Post Name Here --> 
                            <a href="#" class="name"><%= post.user.fullname %></a>
                            <%= 'at marketawy' if post.marketawy == true %>
<!-- Post Content Here -->
                            <p class="content"><%= post.content %></p>
                            

                                <div class="edit">
                                    <% @post_to_update = post %>
                                    <%= form_for @post_to_update do |f| %>
<!-- Edit Post Textarea Here -->
                                    <%= f.text_area :content, class: 'form-control', id: 'textarea', placeholder: 'Write Something...', rows: '4' %>
<!-- Submit Edit Post Button Here-->
                                    <%= f.submit :post, class: "btn btn-primary pull-right" %>

                                    <% end %>
                                </div><!-- .edit -->
                        </div><!-- .text -->

                        <!-- Clear Floa side effects -->
                        <div class="clearfix"></div>
                    </div><!-- End Of statue Block -->
                    <% end %>
               <% end %>
                    
<!-- Load More Button Here-->
                    <!-- Load More Button -->
                    <!-- <button class="btn btn-default btn-lg full-width">Load More...</button> -->

                </div><!-- .statues-column -->
