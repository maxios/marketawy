                    <button class="btn btn-primary" tabindex="0"><span class="fa fa-plus icon-spin"></span>&nbsp;Add Job</button>
                    
                    
                    
                    
                    
                    
                    <!-- Start of Job Block -->
                    <div class="job" tabindex="0">
